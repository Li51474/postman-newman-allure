	"item": [
		{
			"name": "01-管理员登录",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1. 把响应体转成 JSON\r",
							"const jsonData = pm.response.json();\r",
							"\r",
							"// 2. 提取 token（按实际字段名修改）\r",
							"const token = jsonData[\"Admin-Token\"];\r",
							"\r",
							"// 3. 存成全局变量（也可存环境变量 pm.environment.set）\r",
							"pm.globals.set(\"token\", token);\r",
							"\r",
							"// 4.（可选）控制台打印验证\r",
							"console.log(\"提取到的 token =\", token);"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "username",
							"value": "admin"
